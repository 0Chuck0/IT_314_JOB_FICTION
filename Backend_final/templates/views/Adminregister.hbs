    <script>

      document.getElementById('myForm').addEventListener('submit', function () {
        var email = document.getElementById("exampleInputEmail1").value;
        var emailRegex = "/^[a-zA-Z0-9._]{2,}+@[a-zA-Z0-9._]{2,}+\.[a-zA-Z]{2,}$/";

        if (email.length > 320 || (!email.match(emailRegex))) {
          document.getElementById('validemail').classList.remove('form-text');
          document.getElementById('validemail').style.display = 'block';
          document.getElementById('validemail').innerHTML = 'Please Enter valid Email';
          event.preventDefault();
        }
        else {
          console.log('Valid Email');
          document.getElementById('validemail').classList.add('form-text');
          document.getElementById('validemail').style.display = 'block';
          document.getElementById('validemail').innerHTML = 'We will send you relevant jobs on this mail';
          event.preventDefault();
        }

      });
    </script>
    <script>
      function lidateName() {
        var nameInput = document.getElementById('forname');
        var nameValue = nameInput.value.trim();

        // Regular expression to check if the value contains only alphabets and spaces
        var regex = /^[A-Za-z\s]+$/;

        // Check if the value matches the regular expression
        if (!regex.test(nameValue)) {
          document.getElementById('validname').textContent = 'Name should contain only alphabets and spaces.';
          nameInput.setCustomValidity('Invalid name'); // Set custom validity to prevent form submission
        } else {
          document.getElementById('validname').textContent = '';
          nameInput.setCustomValidity(''); // Reset custom validity
        }
      }
    </script>
