          <input type="text" name="newname" class="form-control" id="forname" placeholder="Name"
            maxlength="50" minlength="3" pattern="^[a-zA-Z\s]{3,50}$" oninput="lidateName()" required>
          <p id="validname" style="color: red;"></p>
          {{!-- <span style="color: red; display: none;" id="">Please Enter a valid Name</span> --}}
          {{!-- pattern="^[a-zA-Z0-9._]{2,}+@[a-zA-Z0-9._]{2,}+\.[a-zA-Z]{2,}$" ^[a-zA-Z]+$ --}}
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1 title" class="form-label">Email ID<sup class="mandatory_Filds">*</sup></label>
          <input type="text" class="form-control" name="newemail" id="exampleInputEmail1" aria-describedby="emailHelp"
            placeholder="Email ID" pattern="^[a-zA-Z0-9._]+@[a-zA-Z0-9._]+\.[a-zA-Z]{2,}$" maxlength="320"
            required>
          <span class="form-text" id="validemail">
            We will send you relevant jobs on this mail
            {{!-- pattern="[a-zA-Z0-9._]{2,}+@[a-zA-Z0-9._]{2,}+\.[a-zA-Z]{2,}" --}}
          </span>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1main title" class="form-label">Password<sup
              class="mandatory_Filds">*</sup></label>
          <input type="password"
            pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%&'*+\/=?^_`,])(?=.*[^\w\s]).{8,15}$"
            class="form-control" name="password" id="exampleInputPassword1main"
            placeholder="Create a password" required>
          <div id="exampleInputPassword1" class="form-text">
            Minimum 8 characters required including atleast one lowercase, UPPERCASE, number & symbols
          </div>
        </div>
        <div class="btn-container">
          <button type="submit" class="btn btn-primary register-btn" id="final_submit">Register</button>
        </div>
      </form>
