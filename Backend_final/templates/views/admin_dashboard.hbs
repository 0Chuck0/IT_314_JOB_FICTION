    <div class="container-main mt-5">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 id="card-title" class="card-title">Verified Companies</h5>
                        <span type="number" id="verified-companies">{{num1}}</span>

                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 id="card-title" class="card-title">Unverified Companies</h5>
                        <span id="unverified-companies">{{num2}}</span>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 id="card-title" class="card-title">Total Companies</h5>
                        <span id="total-companies"></span>
                    </div>
                </div>
            </div>
        </div>
        <hr>

        <div class="row">
            <div class="col-md-12 mt-0 align-items-center">
                <div id="un_comp_list" class="card white">
                    <div class="card-body " style="cursor: pointer;">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0 ">Unverified Companies</h5>
                            <i class="fas fa-angle-down"></i>
                        </div>
                    </div>
                </div>
                <div class="cards-container" id="uv-cards-container">
                    {{#if Unverified}}
                    {{#each Unverified}}
                    <div class="row jobs-card" onclick="window.location='/Admin/company_description/{{email}}'">
                        <div class="col-md-2 company-logo">
                            <img src={{profile}} alt="Company-logo" class="job-profile">
                        </div>
                        <div class="col-md-3">
                            <h4>{{companyname}}</h4>
                        </div>
                        <div class="col-md-4">
                            <h4>{{industrytype}}</h4>
                        </div>
                        <div class="col-md-3 ">
                            <p><i class="fa-solid fa-location-dot"></i>{{companylocation}}</p>
                        </div>
                    </div>
                    {{/each}}
                    {{else}}
                    <div style="text-align: center;">
                        <p>
                        <h2>No Unverified Companies</h2>
                        </p>
                    </div>
                    {{/if}}
                </div>

            </div>
        </div>

        <div class="row align-items-center">
            <div class="col-md-12 mt-0">
                <div id="vf-comp-list" class="card white">
                    <div class="card-body" style="cursor: pointer;">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">Verified Companies</h5>
                            <!-- Add your content for unverified companies -->
                            <i class="fas fa-angle-down"></i>
                        </div>
                    </div>
                </div>
                <div class="cards-container" id="vf-cards-container">
                    {{#if verified}}
                    {{#each verified}}
                    <div class="row jobs-card" onclick="window.location='/Admin/company_description/{{email}}'">
                        <div class="col-md-2 company-logo">
                            <img src={{profile}} alt="Company-logo" class="job-profile">
                        </div>
                        <div class="col-md-3">
                            <h4>{{companyname}}</h4>
                        </div>
                        <div class="col-md-4">
                            <h4>{{industrytype}}</h4>
                        </div>
                        <div class="col-md-3 ">
                            <p><i class="fa-solid fa-location-dot"></i>{{companylocation}}</p>
                        </div>
                    </div>
                    {{/each}}
                    {{else}}
                    <div style="text-align: center;">
                        <p>
                        <h2>No Verified Companies</h2>
                        </p>
                    </div>
                    {{/if}}
                </div>

            </div>
        </div>
    </div>


