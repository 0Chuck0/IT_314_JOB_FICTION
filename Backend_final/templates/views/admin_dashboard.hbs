    <style>
        /* Add your custom styles here */

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            color: black;
        }



        /* .container {
            padding: 20px;
        } */

        .card {
            margin-bottom: 20px;
            border: 0.5px solid rgba(160, 138, 138, 0.521);
        }

        #verified-companies,
        #unverified-companies,
        #total-companies {
            font-size: 32px;
            font-weight: bold;
            color: rgb(55, 55, 232);
        }

        .nav-profile {
            display: none !important;
        }

        .jobs-card i {
            margin-right: 0.5em;
            font-size: 1.2em;
        }

        .jobs-card {
            box-shadow: 0 0 2px 2px gray;
            border-radius: 5px;
            min-height: 150px;
            align-items: center;
            background-color: rgb(255, 255, 255);
            width: 90%;
            cursor: pointer;
            margin: 1rem auto;
        }

        .jobs-card:hover {
            border: 1px rgb(49, 85, 185) solid;
            box-shadow: 0px 0px 5px gray;

            h4 {
                font-weight: bolder !important;
            }

        }

        .cards-container {
            width: 90%;
            max-height: 0;
            background-color: rgba(205, 225, 254, 0.708);
            overflow-y: scroll;
            margin-left: auto;
            margin-right: auto;
            margin-bottom: 1rem;
            border-radius: 8px;
            box-shadow: 0 0 5px gray;
            transition: max-height 0.2s ease-out;
            padding: 0 !important;
            border: 0 !important;
            color: black !important;
        }

        #card-title {
            font-weight: bolder;
            font-size: 25px;
        }

        .labels {
            margin-top: auto;
            margin-bottom: auto;
        }

        .job-labels-open-nav {
            display: none;
        }

        .label-a:hover,
        .label-c:hover {

            box-shadow: 0px 0 5px;
            background-color: var(--primaryColor);
            color: white !important;
        }

        .labels {
            max-width: fit-content;
        }

        a:hover {
            text-decoration: none;
        }

        .container-main {
            width: 85%;
            margin: auto;
        }

        .user-profile,
        .company-logo {
            display: block !important;
        }

        .white {
            background-color: white;
            transition: 0.25s linear;
        }

        .blue {
            border: 1.5px black solid;
            background-color: rgb(174, 244, 244) !important;
            transition: 0.25s linear;
        }

        #vf-comp-list,
        #un_comp_list {
            background-color: white;
            transition: 0.25s linear;
        }

        #vf-comp-list:hover,
        #un_comp_list:hover {

            background-color: rgb(174, 244, 244);
            border: 1.5px black solid;
            transition: 0.25s linear;
        }

        @media (width < 768px) {
            .job-labels {
                margin-top: 0 !important;
            }

            .jobs-card {
                text-align: center;
            }

            .job-detail p {
                margin-bottom: 0;
            }

            .label-3 {
                display: none;
            }

            .jobs-card i {
                margin-right: 0.2rem;
            }

        }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            let uv_comp = document.getElementById("unverified-companies").innerHTML;
            let v_comp = document.getElementById("verified-companies").innerHTML;
            let total_comp = Number(uv_comp) + Number(v_comp);
            document.getElementById("total-companies").innerHTML = total_comp;

            let btn = document.getElementById("un_comp_list");
            let btn2 = document.getElementById("vf-comp-list");
            btn.addEventListener("click", open_list1);
            btn2.addEventListener("click", open_list2);

            function open_list1() {
                let disp_prop = document.getElementById("uv-cards-container");
                if (disp_prop.style.maxHeight === "0px") {
                    disp_prop.style.maxHeight = "1000px";
                    console.log(disp_prop.style.maxHeight);
                }
                else {
                    disp_prop.style.maxHeight = "0px";
                    console.log(disp_prop.style.maxHeight);
                }
            }

            function open_list2() {
                let disp_prop = document.getElementById("vf-cards-container");
                if (disp_prop.style.maxHeight === "0px")
                    disp_prop.style.maxHeight = "1000px";
                else
                    disp_prop.style.maxHeight = "0px";
            }


        });
    </script>
</head>


