      <form class="form-registration" action="/register" method="post" enctype="multipart/form-data" id="myForm">
        <h1>
          Register
        </h1>
        <div class="mb-3">
          <label for="exampleFormControlInput1 title" class="form-label">Full Name</label>
          <input type="text" name="name" class="form-control" id="forname" placeholder="What is your name?"
            maxlength="50" minlength="3" pattern="^[a-zA-Z\s]{3,50}$" required>
          <span style="color: red; display: none;" id="validname">Please Enter a valid Name</span>
          {{!-- pattern="^[a-zA-Z0-9._]{2,}+@[a-zA-Z0-9._]{2,}+\.[a-zA-Z]{2,}$" ^[a-zA-Z]+$ --}}
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1 title" class="form-label">Email ID</label>
          <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp"
            placeholder="Tell us your Email ID"  required>
          <span class="form-text" id="validemail">
            We will send you relevant jobs on this mail
            {{!-- pattern="[a-zA-Z0-9._]{2,}+@[a-zA-Z0-9._]{2,}+\.[a-zA-Z]{2,}" --}}
          </span>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1main title" class="form-label">Password</label>
          <input type="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%&'*+\/=?^_`,])(?=.*[^\w\s]).{8,15}$"
            class="form-control" name="password" id="exampleInputPassword1main"
            placeholder="Create a password for your account" required>
          <div id="exampleInputPassword1" class="form-text">
            Minimum 8 characters required including atleast one lowercase, UPPERCASE, number & symbols
          </div>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword2 title" class="form-label">Confirm Password</label>
          <input type="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!#@$%&'*+\/=?^_`,])(?=.*[^\w\s]).{8,15}$"
            name="cpassword" class="form-control" id="exampleInputPassword2" placeholder="Rewrite your password"
            required>
        </div>
        <div class="mb-3">
          <label for="validationDefaultUsername title" class="form-label">Mobile number</label>
          <div class="input-group">
            <span class="input-group-text" id="inputGroupPrepend2">+91</span>
            <input type="text" pattern="^(?=.*[0-9]).{10}$" name="number" class="form-control"
              id="validationDefaultUsername" aria-describedby="inputGroupPrepend2" required placeholder="Mobile Number">
          </div>
          <div class="form-text">
            Recruiters will contact you on this number
          </div>
        </div>


        <div class="mb-3">
          <label for="exampleFormControlInput1 birthdate" class="form-label">Date of Birth<sup
              class="mandatory_Filds">*</sup></label>
          <input type="date" name="DOB" id="myDate" class="form-control" max="2006-12-31" min="1178-01-01" required>
        </div>

        <div class="Gender">
          <label for="" class="form-label title">Gender</label>
          <div class="checks">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault1" value="male" checked>
              <label class="form-check-label" for="flexRadioDefault1">
                Male
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="gender" value="female" id="flexRadioDefault2">
              <label class="form-check-label" for="flexRadioDefault2">
                Female
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="gender" value="other" id="flexRadioDefault3">
              <label class="form-check-label" for="flexRadioDefault3">
                Other
              </label>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <img src="" id="abc" alt="Add your profile photo below" class="img">
        </div>
        <input type="file" name="file"id="image" onchange="func(event)">

        <button type="submit" class="btn btn-primary register-btn" id ="final_submit">Register</button>
      </form>
