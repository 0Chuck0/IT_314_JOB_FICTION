    <form class="form-registration" action="/register" method="post" enctype="multipart/form-data" >
      <h1>
        Register
      </h1>

      <div class="mb-3">
        <label for="exampleFormControlInput1 name" class="form-label">Full Name<sup
            class="mandatory_Filds">*</sup></label>
        <input type="text" class="form-control" name="name" id="exampleFormControlInput1" placeholder="What is your name?" required>
      </div>

      <div class="mb-3">
        <label for="exampleInputEmail1 title" class="form-label">Email ID<sup class="mandatory_Filds">*</sup></label>
        <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp"
          placeholder="Tell us your Email ID" required>
        <div class="form-text">
          We will send you relevant jobs on this mail
        </div>
      </div>

      <div class="mb-3">
        <label for="exampleInputPassword1 password" class="form-label">Password<sup class="mandatory_Filds">*</sup></label>
        <input type="password" pattern="^(?=.*[A-Z])(?=.*[!@#$`!@#$%^&*&*])(?=.*[0-9])(?=.*[a-z]).{6,}$"
          class="form-control" name="password" id="exampleInputPassword1" placeholder="Enter your new password" required>
        <div id="Password1" class="form-text">
          Password must contain at least 6 characters including UPPERCASE, lowercase, number & symbol 
        </div>
      </div>

      <!-- New Updates Begin -->
      <div class="mb-3">
        <label for="exampleInputPassword1 confirm_password" class="form-label">Confirm password<sup
            class="mandatory_Filds">*</sup></label>
        <input type="password" pattern="^(?=.*[A-Z])(?=.*[!@#$`!@#$%^&*&*])(?=.*[0-9])(?=.*[a-z]).{6,}$"
          class="form-control" name="cpassword" id="exampleInputPassword2" placeholder="Enter your confirm password">
        <div id="Password2" class="form-text">
        </div>
      </div>
      <!-- New Updates End -->

      <div class="mb-3">
        <label for="validationDefaultUsername number" class="form-label">Mobile number<sup
            class="mandatory_Filds">*</sup></label>
        <div class="input-group">
          <span class="input-group-text" id="inputGroupPrepend2">+91</span>
          <input type="text" pattern="^(?=.*[0-9]).{10}$" class="form-control" name="number" id="validationDefaultUsername"
            aria-describedby="inputGroupPrepend2" required placeholder="Mobile Number">
        </div>
        <div class="form-text">
          Recruiters will contact you on this number
        </div>
      </div>

      <div class="mb-3">
        <label for="exampleFormControlInput1 birthdate" class="form-label">Date of Birth<sup
            class="mandatory_Filds">*</sup></label>
        <input type="date" name="DOB" id="myDate" class="form-control" required>
      </div>

      <div class="Gender">
        <label for="gender" class="form-label title">Gender</label>
        <div class="checks">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="gender" value="male" id="flexRadioDefault1" checked>
            <label class="form-check-label" for="flexRadioDefault1">
              Male
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="gender" value="female" id="flexRadioDefault2">
            <label class="form-check-label" for="flexRadioDefault2">
              Female
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="gender" value="other" id="flexRadioDefault3">
            <label class="form-check-label" for="flexRadioDefault3">
              Other
            </label>
          </div>
        </div>
      </div>

